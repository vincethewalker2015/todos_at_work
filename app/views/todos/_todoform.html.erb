<div align="center">
  <div class="row">
  <div class="col-md-3 col-md-offset-4">
    <div class="well">
      <%= form_for @todo do |f| %>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
      </p>

      <p>
        <%= f.submit class: "btn btn-primary" %>
      </p>

      <% end %>
        <%= link_to "Index", todos_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>
</div>