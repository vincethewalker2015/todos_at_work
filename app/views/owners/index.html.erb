<div class="well">
    <h2 align="center">Owners</h2>
</div>

 <div align="center">
      <% @owners.each do |owner| %>
        <div class="col-md-4 col-md-offset-4 well profile-black-white-thin row ">
          <%# cycle('profile-black-white-thin-b', '') %>
        <p class="descriptionText">Name:<%= owner.name %> </p>
          <%= link_to "View", owner_path(owner), class: "btn btn-info bttn"%>
          <%# if logged_in? && current_user.admin? %>
            <%= link_to "Edit", edit_owner_path(owner), class: "btn btn-warning bttn" %>
          <%# end %>
          <%# if logged_in? && current_user.admin? && !user.admin? %>
            <%= link_to "Delete", owner_path(owner), method: :delete, data: {confirm: "Are you sure??"}, class: "btn btn-danger bttn" %>
          <%# end %>
        </div>
    <% end %>
  </div>